def run_hagrid() -> None:
    print(HAGRID)
    time.sleep(3)
    print("Harry, is that you? Can't be too careful!")
    time.sleep(3)
    print("Answer this question that only you would know...")
    print("\n\n\n")
    time.sleep(3)
    print("Q: What is the best definition of abstraction:")
    print("   A: Weird over-priced art")
    print("   B: Removing unnecessary details")
    print("   C: A stomach workout")
    print("\n")

    answer = input("Your answer: ")
    if answer.lower() != "b":
        print("I'm afraid of a polyjuice imposter... not going to say anymore")
        return

    print("\n\n\n")
    print("Phew, it's you! Hogwarts is in danger. First, you're going to need")
    print("a new spell: `ls -al`. It's like 'revelio' (lumos on steroids) and")
    print("will show you hidden objects.")
    print("\n\n\n")
    time.sleep(10)

    print("Notice that there is a SPACE between the spell (command) and what follows")
    time.sleep(3)

    print("Let's try it now!")
    ls_al = input("What's the new spell: ")
    while ls_al != "ls -al":
        ls_al = input("Not quite.... let's try that again: ")

    print("\n\n\n")
    time.sleep(1)
    print("You got it! Now look at all the new stuff you can see in this directory:")
    print("drwxr-xr-x 4 root  root   128 Oct 14 15:15 .")
    print("drwxr-xr-x 1 root  root  4096 Oct 14 14:42 ..")
    print("-rw-r--r-- 1 harry harry   22 Oct 14 15:15 .gold_coin_under_bench")
    print("-rwxrwxr-x 1 harry harry 4919 Oct 14 15:15 hagrid")
    print("\n\n\n")
    time.sleep(.5)
    print("Look at that! A shiny gold coin that was hiding!")
    time.sleep(5)
    print("\n\n\n")
    print("I'd suggest writing `ls -al` in your spell book for when a directory seems empty")
    print("even after you us `ls`.")
    print("\n\n\n")
    time.sleep(15)
    print("Ok, that's all I have for you. Apparate to Kings Crossing (`/kings_cross`)")
    print("and go save Hogwarts!")
    time.sleep(5)


if __name__ == "__main__":
    run_hagrid()

