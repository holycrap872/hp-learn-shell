      %@:::@-----------=@@@@.....::::*@
       @:::@%---------@=---@@@:..::::@#
       @@+@-+@-------@-----@++++++%@@@
        @%@---#@#----@-----#@#++++++@#
          @-------#@@@-------++@@@@
          @------=+++@-------+++++@
          @------++++@-------+++++@
          @+++++++###@++++++*#%%@@@
          @#########@@############@
         @@@@@@@@@@@@@@@@@@@@@@@@@@
"""

def question_correct(question: str, answer: str) -> bool:
    time.sleep(3)
    print("\n\n\n")
    print("Q: " + question)
    print("\n")

    response = input("Your answer: ")
    if response.lower() == answer:
        print("Impressive!")
        return True
    else:
        print("Your professors should be ashamed")
        return False


def question_one_correct() -> bool:
    return question_correct("What color are directories?", "blue")


def question_two_correct() -> bool:
    return question_correct("What color are files?", "white")


def question_three_correct() -> bool:
    return question_correct("What color are programs?", "green")


def run_conductor() -> None:
    print(CONDUCTOR)
    time.sleep(3)
    print("Trying to get on the train without paying???")
    time.sleep(3)
    print("You're going to have to earn your way on by answering me these questions three")

    if not question_one_correct():
        return

    if not question_two_correct():
        return

    if not question_three_correct():
        return

    print("\n\n\n")
    print("Ok, I guess you earned your way. You can get on the train to hogwarts")
    print("Execute the spell `sl` and good luck!")
    time.sleep(5)


if __name__ == "__main__":
    run_conductor()

